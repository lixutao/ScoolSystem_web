<table class="table table-bordered">
  <thead>
    <tr>
      <th>姓名</th>
      <th>性别</th>
      <th>年龄</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.sex %></td>
        <td><%= student.age %></td>
        <td><%= link_to '查看', student %></td>
        <td><%= link_to '编辑', edit_student_path(student) %></td>
        <td><%= link_to '删除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建',new_student_path, :class => "btn btn-primary" %>
