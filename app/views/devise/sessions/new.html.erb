<h2>后台登录</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-horizontal customer" } ) do |f| %>

  <div class="control-group">
    <%= f.label '邮箱', :class => 'control-label' %><br />
    <div class="controls">
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label '密码', :class => 'control-label' %><br />
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <% if devise_mapping.rememberable? -%>
      <div class="radio"><%= f.check_box :remember_me %><%= f.label '记住我', :class => 'control-label', :for => 'user_remember_me' %></div>
    <% end -%>
  </div>
  <br>

  <div><%= f.submit "登录", class: 'btn btn-primary' %></div>
<% end %>

<%#= render "devise/shared/links" %>
