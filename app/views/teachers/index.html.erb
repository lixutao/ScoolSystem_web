<table class="table table-bordered">
  <thead>
    <tr>
      <th>姓名</th>
      <th>性别</th>
      <th>年龄</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% if @teachers.present? %>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.sex %></td>
        <td><%= teacher.age %></td>
        <td><%= link_to '查看', teacher %></td>
        <td><%= link_to '编辑', edit_teacher_path(teacher) %></td>
        <td><%= link_to '删除', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
        <tr class="nodata">
          <td colspan="4">暂无数据.</td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

